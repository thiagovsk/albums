<!DOCTYPE html>
<html>
  <head>
    <title>Music</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">

      <%= flash_messages %>

      <% if current_user %>
	    <%= "Logged in as #{current_user.username}" %> | <%= link_to 'Log Out', logout_path, method: :delete %>
      <% else %>
	    <%= link_to 'Log In', login_path %> or <%= link_to 'Sign Up', new_user_path %>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
